<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="PlaylistMakerDialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="android:textFontWeight">400</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:dialogCornerRadius">@dimen/gap_4dp</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorPrimary">@color/azure</item>
    </style>

</resources>