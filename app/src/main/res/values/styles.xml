<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/gap_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">@dimen/gap_0dp</item>
        <item name="android:insetBottom">@dimen/gap_0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_gap</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="LinearSettingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_line_height</item>
        <item name="android:orientation">horizontal</item></style>

    <style name="TextViewStyle">
        <item name="android:layout_width">@dimen/gap_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item></style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_marginStart">@dimen/icon_gap</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:thumbTint">@color/grey</item>
        <item name="android:trackTint">@color/grey</item>
        <item name="android:checked">false</item>

    </style>
</resources>