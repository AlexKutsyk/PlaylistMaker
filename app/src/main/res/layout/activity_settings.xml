<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:paddingStart="@dimen/gap_16dp"
    android:paddingEnd="@dimen/side_gap_right"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_52dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/colorSecondary"
            app:srcCompat="@drawable/arrow_back"
            app:tint="?attr/colorOnBackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/gap_24dp"
            android:text="@string/main_Menu_Settings"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/title_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_line_height"
        android:layout_marginTop="@dimen/gap_24dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/dark_theme"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_16"
        app:trackTint="?attr/colorSurface"
        app:thumbTint="?attr/colorOnSurface"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_line_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/gap_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/share_app"
            style="@style/TextViewStyle" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/icon_gap"
            app:srcCompat="@drawable/share"
            style="@style/ImageButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_line_height"
        android:orientation="horizontal">

        <TextView
            android:text="@string/write_to_the_support"
            android:layout_width="@dimen/gap_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            style="@style/TextViewStyle" />

        <ImageButton
            android:id="@+id/button_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/icon_gap"
            app:srcCompat="@drawable/support"
            style="@style/ImageButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_line_height"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_agreement"
            android:layout_width="@dimen/gap_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            style="@style/TextViewStyle" />

        <ImageButton
            android:id="@+id/button_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/icon_gap"
            app:srcCompat="@drawable/arrow_forward"
            style="@style/ImageButtonStyle" />

    </LinearLayout>

</LinearLayout>