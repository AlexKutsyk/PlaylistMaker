<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/gap_16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/gap_14dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_22"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"/>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_marginTop="@dimen/gap_40dp"
        android:text="@string/main_Menu_Search"
        app:icon="@drawable/search"
        style="@style/ButtonStyle" />

    <Button
        android:id="@+id/buttonLibrary"
        style="@style/ButtonStyle"
        android:layout_marginVertical="@dimen/gap_16dp"
        android:text="@string/main_Menu_Library"
        app:icon="@drawable/library" />

    <Button
        android:id="@+id/buttonSetting"
        android:layout_marginBottom="@dimen/gap_28dp"
        android:text="@string/main_Menu_Settings"
        app:icon="@drawable/settings"
        style="@style/ButtonStyle"
        />

</LinearLayout>