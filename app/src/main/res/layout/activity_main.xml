<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/gap_16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/gap_14dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0dp"
        android:layout_marginTop="@dimen/gap_40dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/gap_0dp"
        android:insetBottom="@dimen/gap_0dp"
        android:text="@string/main_Menu_Search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_gap"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/buttonLibrary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0dp"
        android:layout_marginVertical="@dimen/gap_16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/gap_0dp"
        android:insetBottom="@dimen/gap_0dp"
        android:text="@string/main_Menu_Library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_gap"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/buttonSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0dp"
        android:layout_marginBottom="@dimen/gap_28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/gap_0dp"
        android:insetBottom="@dimen/gap_0dp"
        android:text="@string/main_Menu_Settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        android:textStyle="normal"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_gap"
        app:iconTint="@color/black" />

</LinearLayout>