<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_line_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_track"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_45dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/gap_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_14dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_16"
            tools:text="Track https://is5-ssl.mzstatic.com/image/thumb/Music115/v4/7b/58/c2/7b58c21a-2b51-2bb2-e59a-9bb9b96ad8c3/00602567924166.rgb.jpg/100x100bb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_artist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:maxLines="1"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textFontWeight="400"
                    android:textSize="@dimen/text_size_11sp"
                    tools:text="Artist https://is5-ssl.mzstatic.com/image/thumb/Music115/v4/7b/58/c2/7b58c21a-2b51-2bb2-e59a-9bb9b96ad8c3/00602567924166.rgb.jpg/100x100bb" />

                <ImageView
                    android:layout_width="@dimen/_13dp"
                    android:layout_height="@dimen/_13dp"
                    android:src="@drawable/ic_dot"
                    app:tint="?attr/colorPrimaryVariant"
                    tools:src="@drawable/ic_dot" />

                <TextView
                    android:id="@+id/time_track"
                    android:layout_width="@dimen/_64dp"
                    android:layout_height="@dimen/_13dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textFontWeight="400"
                    android:textSize="@dimen/text_size_11sp"
                    tools:text="888-88" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/gap_8dp"
        android:background="?attr/colorSecondary"
        android:src="@drawable/arrow_forward"
        app:tint="?attr/colorPrimaryVariant" />

</LinearLayout>